<%- include("header") %>
<div class="container">
  <h3 class="my-4">Update Todo</h3>
  <div class="container-fluid">
    <a href="/" class="border-shadow">
      <span class="text-gradient">Show all todos</span>
    </a>
  </div>
  <form
    name="form"
    id="form"
    method="POST"
    action="/todos/update/<%=todo._id%>"
  >
    <div class="form-group my-4">
      <label for="title" class="form-label">Title</label>
      <input type="hidden" id="id" value="<%=todo._id%>" />
      <input
        type="text"
        class="form-control"
        name="title"
        id="title"
        value="<%= todo.title%>"
        required
      />
    </div>

    <div class="form-group my-4">
      <label for="description" class="form-label">Description</label>
      <textarea
        type="description"
        class="form-control"
        name="description"
        id="description"
        required
      >
<%=todo.description%></textarea
      >
    </div>
    <div class="form-group my-4">
      <label for="date" class="form-label">Deadline</label>
      <div class="d-flex flex-row">
        <input
          type="datetime-local"
          class="form-control"
          name="date"
          id="date"
          value="<%=new Date(todo.date).toISOString().substr(0,16)%>"
          required
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script></script>
<%- include("footer") %>
